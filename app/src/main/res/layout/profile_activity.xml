<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="HardcodedText">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/profile_icon"
                app:srcCompat="@drawable/ic_user"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:contentDescription="Profile photo of friend"

                android:layout_margin="32dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <TextView
                android:text="Name"
                android:id="@+id/profile_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextDark"

                android:layout_marginTop="16dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"

                app:layout_constraintTop_toBottomOf="@+id/profile_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"

                app:layout_constraintTop_toBottomOf="@+id/profile_name_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <TextView
                android:text="Email"
                android:id="@+id/profile_email_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextDark"

                android:layout_marginTop="16dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"

                app:layout_constraintTop_toBottomOf="@+id/profile_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"

                app:layout_constraintTop_toBottomOf="@+id/profile_email_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <View
                android:id="@+id/divider_0"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:background="@color/colorPrimaryDark"

                android:layout_marginTop="16dp"

                app:layout_constraintTop_toBottomOf="@+id/profile_email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <TextView
                android:text="Cell"
                android:id="@+id/profile_cell_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextDark"

                android:layout_marginTop="16dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"

                app:layout_constraintTop_toBottomOf="@+id/divider_0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <TextView
                android:id="@+id/profile_cell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"

                app:layout_constraintTop_toBottomOf="@+id/profile_cell_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <TextView
                android:text="Phone"
                android:id="@+id/profile_phone_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextDark"

                android:layout_marginTop="16dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"

                app:layout_constraintTop_toBottomOf="@+id/profile_cell"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <TextView
                android:id="@+id/profile_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"

                app:layout_constraintTop_toBottomOf="@+id/profile_phone_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <View
                android:id="@+id/divider_1"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:background="@color/colorPrimaryDark"

                android:layout_marginTop="16dp"

                app:layout_constraintTop_toBottomOf="@+id/profile_phone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <TextView
                android:text="Birthday"
                android:id="@+id/profile_birthday_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextDark"

                android:layout_marginTop="16dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"

                app:layout_constraintTop_toBottomOf="@+id/divider_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <TextView
                android:id="@+id/profile_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"

                app:layout_constraintTop_toBottomOf="@+id/profile_birthday_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <TextView
                android:text="Registered"
                android:id="@+id/profile_registered_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextDark"

                android:layout_marginTop="16dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"

                app:layout_constraintTop_toBottomOf="@+id/profile_birthday"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <TextView
                android:id="@+id/profile_registered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"

                app:layout_constraintTop_toBottomOf="@+id/profile_registered_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <View
                android:id="@+id/divider_2"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:background="@color/colorPrimaryDark"

                android:layout_marginTop="16dp"

                app:layout_constraintTop_toBottomOf="@+id/profile_registered"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <TextView
                android:text="Street"
                android:id="@+id/profile_street_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextDark"

                android:layout_marginTop="16dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"

                app:layout_constraintTop_toBottomOf="@+id/divider_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <TextView
                android:id="@+id/profile_street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"

                app:layout_constraintTop_toBottomOf="@+id/profile_street_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <TextView
                android:text="City"
                android:id="@+id/profile_city_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextDark"

                android:layout_marginTop="16dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"

                app:layout_constraintTop_toBottomOf="@+id/profile_street"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <TextView
                android:id="@+id/profile_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"

                app:layout_constraintTop_toBottomOf="@+id/profile_city_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <TextView
                android:text="State"
                android:id="@+id/profile_state_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextDark"

                android:layout_marginTop="16dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"

                app:layout_constraintTop_toBottomOf="@+id/profile_city"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <TextView
                android:id="@+id/profile_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"

                app:layout_constraintTop_toBottomOf="@+id/profile_state_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <TextView
                android:text="Country"
                android:id="@+id/profile_nat_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextDark"

                android:layout_marginTop="16dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"

                app:layout_constraintTop_toBottomOf="@+id/profile_state"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <TextView
                android:id="@+id/profile_nat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                android:layout_marginBottom="16dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"

                app:layout_constraintTop_toBottomOf="@+id/profile_nat_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

    </android.support.constraint.ConstraintLayout>

</ScrollView>